generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  EDITOR
  AUTHOR
  SUBSCRIBER
}

enum PostStatus {
  DRAFT
  PUBLISHED
  SCHEDULED
}

enum AnimalSpecies {
  DOG
  CAT
  COW
  PIGEON
  BULL
}

enum AnimalStatus {
  HUNGRY
  FED_TODAY
  RESCUED
  ADOPTED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  PAST_DUE
  PAUSED
  EXPIRED
}

model User {
  id                    String             @id @default(cuid())
  name                  String
  email                 String             @unique
  passwordHash          String
  emailVerified         DateTime?
  role                  UserRole           @default(SUBSCRIBER)
  bio                   String?
  avatar                String?
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt

  // Subscription fields
  razorpaySubscriptionId String?           @unique
  subscriptionStatus     SubscriptionStatus?
  subscriptionStartedAt  DateTime?
  subscriptionEndsAt     DateTime?
  nextBillingDate        DateTime?
  animalsFed             Int               @default(0)

  passwordResetTokens PasswordResetToken[]
  posts               Post[]
  savedPosts          SavedPost[]
  animalPhotos        AnimalPhoto[]

  @@index([razorpaySubscriptionId])
  @@index([subscriptionStatus])
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model EmailVerificationToken {
  id         String   @id @default(cuid())
  email      String
  tokenHash  String   @unique
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  usedAt     DateTime?

  @@index([email])
}

model MagicLinkToken {
  id            String   @id @default(cuid())
  email         String
  tokenHash     String   @unique
  createdAt     DateTime @default(now())
  expiresAt     DateTime
  usedAt        DateTime?
  verifyCode    String?  @unique
  verifyExpiresAt DateTime?

  @@index([email])
  @@index([tokenHash])
  @@index([verifyCode])
}

model Post {
  id              String     @id @default(cuid())
  title           String
  slug            String     @unique
  excerpt         String?
  content         String     @db.Text
  contentMarkdown String?    @db.Text
  coverImage      String?
  status          PostStatus @default(DRAFT)
  publishedAt     DateTime?
  scheduledFor    DateTime?
  authorId        String
  views           Int        @default(0)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  emailSent       Boolean    @default(false)

  author     User                @relation(fields: [authorId], references: [id], onDelete: Cascade)
  categories PostCategory[]
  savedBy    SavedPost[]

  @@index([authorId])
  @@index([status])
  @@index([publishedAt])
  @@index([slug])
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  posts PostCategory[]
}

model PostCategory {
  postId     String
  categoryId String

  post     Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([postId, categoryId])
  @@index([postId])
  @@index([categoryId])
}

model Subscriber {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  isActive      Boolean   @default(true)
  subscribedAt  DateTime  @default(now())
  unsubscribedAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([isActive])
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
}

model SavedPost {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
}

model AnimalPhoto {
  id          String   @id @default(cuid())
  imageUrl    String
  caption     String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  uploadedBy  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  uploader User @relation(fields: [uploadedBy], references: [id], onDelete: Cascade)

  @@index([uploadedBy])
  @@index([isActive])
  @@index([order])
}

enum SharePlatform {
  TWITTER
  FACEBOOK
  WHATSAPP
  INSTAGRAM
  LINKEDIN
  COPY_LINK
  NATIVE
}

model Animal {
  id              String        @id @default(cuid())
  name            String
  slug            String        @unique
  species         AnimalSpecies
  photoUrl        String?
  shortStory      String        @db.VarChar(200)
  description     String        @db.Text
  status          AnimalStatus
  location        String
  firstSpottedDate DateTime
  featured        Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  shares          AnimalShare[]

  @@index([slug])
  @@index([species])
  @@index([status])
  @@index([featured])
  @@index([firstSpottedDate])
}

model AnimalShare {
  id        String       @id @default(cuid())
  animalId  String
  platform  SharePlatform
  createdAt DateTime     @default(now())

  animal    Animal       @relation(fields: [animalId], references: [id], onDelete: Cascade)

  @@index([animalId])
  @@index([platform])
  @@index([createdAt])
}

model Volunteer {
  id          String   @id @default(cuid())
  name        String
  area        String
  availability String  @db.Text
  phone       String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([area])
  @@index([createdAt])
}

model Waitlist {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  city          String?
  referredBy    String?  // email of referrer
  source        String?  // where they came from
  position      Int      // position in waitlist (1, 2, 3, etc.)
  referralCode  String   @unique // unique code for their referral link
  joinedAt      DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([email])
  @@index([referralCode])
  @@index([referredBy])
  @@index([position])
  @@index([joinedAt])
}
