generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  EDITOR
  AUTHOR
  SUBSCRIBER
}

enum PostStatus {
  DRAFT
  PENDING_REVIEW
  PUBLISHED
  SCHEDULED
  ARCHIVED
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  PUBLISH
  UNPUBLISH
  APPROVE
  REJECT
  LOGIN
  LOGOUT
}

enum MediaType {
  IMAGE
  VIDEO
  DOCUMENT
  AUDIO
}

enum AnimalSpecies {
  DOG
  CAT
  COW
  PIGEON
  BULL
}

enum AnimalStatus {
  HUNGRY
  FED_TODAY
  RESCUED
  ADOPTED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  PAST_DUE
  PAUSED
  EXPIRED
}

model User {
  id                    String             @id @default(cuid())
  name                  String
  email                 String             @unique
  passwordHash          String
  emailVerified         DateTime?
  role                  UserRole           @default(SUBSCRIBER)
  bio                   String?
  avatar                String?
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt

  // Subscription fields
  razorpaySubscriptionId String?           @unique
  subscriptionStatus     SubscriptionStatus?
  subscriptionStartedAt  DateTime?
  subscriptionEndsAt     DateTime?
  nextBillingDate        DateTime?
  animalsFed             Int               @default(0)

  passwordResetTokens PasswordResetToken[]
  posts               Post[]              @relation("PostAuthor")
  reviewedPosts       Post[]              @relation("PostReviewer")
  savedPosts          SavedPost[]
  animalPhotos        AnimalPhoto[]
  auditLogs           AuditLog[]
  uploadedMedia       MediaLibrary[]
  approvalsMade       WorkflowApproval[]

  @@index([razorpaySubscriptionId])
  @@index([subscriptionStatus])
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model EmailVerificationToken {
  id         String   @id @default(cuid())
  email      String
  tokenHash  String   @unique
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  usedAt     DateTime?

  @@index([email])
}

model MagicLinkToken {
  id            String   @id @default(cuid())
  email         String
  tokenHash     String   @unique
  createdAt     DateTime @default(now())
  expiresAt     DateTime
  usedAt        DateTime?
  verifyCode    String?  @unique
  verifyExpiresAt DateTime?

  @@index([email])
  @@index([tokenHash])
  @@index([verifyCode])
}

model Post {
  id              String     @id @default(cuid())
  title           String
  slug            String     @unique
  excerpt         String?
  content         String     @db.Text
  contentMarkdown String?    @db.Text
  coverImage      String?
  status          PostStatus @default(DRAFT)
  publishedAt     DateTime?
  scheduledFor    DateTime?
  authorId        String
  views           Int        @default(0)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  emailSent       Boolean    @default(false)

  // SEO fields
  metaTitle       String?
  metaDescription String?    @db.VarChar(320)
  keywords        String[]
  ogImage         String?
  canonicalUrl    String?
  noIndex         Boolean    @default(false)

  // Enterprise fields
  readingTime     Int?       // Calculated reading time in minutes
  wordCount       Int?
  featured        Boolean    @default(false)
  priority        Int        @default(0) // For ordering featured posts

  // Workflow fields
  reviewerId      String?
  reviewedAt      DateTime?
  reviewNotes     String?    @db.Text

  author     User                @relation("PostAuthor", fields: [authorId], references: [id], onDelete: Cascade)
  reviewer   User?               @relation("PostReviewer", fields: [reviewerId], references: [id])
  categories PostCategory[]
  savedBy    SavedPost[]
  versions   PostVersion[]
  approvals  WorkflowApproval[]

  @@index([authorId])
  @@index([status])
  @@index([publishedAt])
  @@index([slug])
  @@index([featured])
  @@index([priority])
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  posts PostCategory[]
}

model PostCategory {
  postId     String
  categoryId String

  post     Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([postId, categoryId])
  @@index([postId])
  @@index([categoryId])
}

model Subscriber {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  isActive      Boolean   @default(true)
  subscribedAt  DateTime  @default(now())
  unsubscribedAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([isActive])
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
}

model SavedPost {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
}

model AnimalPhoto {
  id          String   @id @default(cuid())
  imageUrl    String
  caption     String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  uploadedBy  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  uploader User @relation(fields: [uploadedBy], references: [id], onDelete: Cascade)

  @@index([uploadedBy])
  @@index([isActive])
  @@index([order])
}

enum SharePlatform {
  TWITTER
  FACEBOOK
  WHATSAPP
  INSTAGRAM
  LINKEDIN
  COPY_LINK
  NATIVE
}

model Animal {
  id              String        @id @default(cuid())
  name            String
  slug            String        @unique
  species         AnimalSpecies
  photoUrl        String?
  shortStory      String        @db.VarChar(200)
  description     String        @db.Text
  status          AnimalStatus
  location        String
  firstSpottedDate DateTime
  featured        Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  shares          AnimalShare[]

  @@index([slug])
  @@index([species])
  @@index([status])
  @@index([featured])
  @@index([firstSpottedDate])
}

model AnimalShare {
  id        String       @id @default(cuid())
  animalId  String
  platform  SharePlatform
  createdAt DateTime     @default(now())

  animal    Animal       @relation(fields: [animalId], references: [id], onDelete: Cascade)

  @@index([animalId])
  @@index([platform])
  @@index([createdAt])
}

model Volunteer {
  id          String   @id @default(cuid())
  name        String
  area        String
  availability String  @db.Text
  phone       String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([area])
  @@index([createdAt])
}

model Waitlist {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  city          String?
  referredBy    String?  // email of referrer
  source        String?  // where they came from
  position      Int      // position in waitlist (1, 2, 3, etc.)
  referralCode  String   @unique // unique code for their referral link
  joinedAt      DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([email])
  @@index([referralCode])
  @@index([referredBy])
  @@index([position])
  @@index([joinedAt])
}

// ============================================
// ENTERPRISE CMS MODELS
// ============================================

// Post Version History - tracks all changes to posts
model PostVersion {
  id              String   @id @default(cuid())
  postId          String
  versionNumber   Int
  title           String
  content         String   @db.Text
  contentMarkdown String?  @db.Text
  excerpt         String?
  coverImage      String?
  metaTitle       String?
  metaDescription String?  @db.VarChar(320)
  keywords        String[]
  changeNote      String?  // Brief description of changes
  createdAt       DateTime @default(now())
  createdById     String

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, versionNumber])
  @@index([postId])
  @@index([createdAt])
}

// Audit Log - tracks all admin actions for compliance
model AuditLog {
  id          String      @id @default(cuid())
  action      AuditAction
  entityType  String      // 'Post', 'User', 'Category', etc.
  entityId    String
  userId      String
  userEmail   String
  userRole    UserRole
  details     Json?       // Additional context
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime    @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([entityType, entityId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

// Workflow Approval - content approval workflow
model WorkflowApproval {
  id          String         @id @default(cuid())
  postId      String
  approverId  String
  status      ApprovalStatus
  notes       String?        @db.Text
  createdAt   DateTime       @default(now())

  post     Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  approver User @relation(fields: [approverId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([approverId])
  @@index([status])
  @@index([createdAt])
}

// Media Library - centralized media management
model MediaLibrary {
  id          String    @id @default(cuid())
  filename    String
  originalName String
  url         String
  type        MediaType
  mimeType    String
  size        Int       // File size in bytes
  width       Int?      // For images/videos
  height      Int?      // For images/videos
  alt         String?   // Alt text for images
  caption     String?
  tags        String[]
  folderId    String?
  uploadedById String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  uploader User         @relation(fields: [uploadedById], references: [id], onDelete: Cascade)
  folder   MediaFolder? @relation(fields: [folderId], references: [id])

  @@index([type])
  @@index([uploadedById])
  @@index([folderId])
  @@index([tags])
  @@index([createdAt])
}

// Media Folders - organize media assets
model MediaFolder {
  id          String   @id @default(cuid())
  name        String
  parentId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  parent   MediaFolder?   @relation("FolderHierarchy", fields: [parentId], references: [id])
  children MediaFolder[]  @relation("FolderHierarchy")
  media    MediaLibrary[]

  @@index([parentId])
  @@index([name])
}

// Photo Moderation Queue - AI-powered moderation
model PhotoModerationQueue {
  id            String   @id @default(cuid())
  imageUrl      String
  uploadedById  String
  aiScore       Float?   // AI moderation confidence score (0-1)
  aiLabels      Json?    // Detected labels from AI
  aiSafe        Boolean? // AI determination of safety
  humanReviewed Boolean  @default(false)
  humanApproved Boolean?
  reviewedById  String?
  reviewNotes   String?
  status        String   @default("pending") // pending, approved, rejected
  createdAt     DateTime @default(now())
  reviewedAt    DateTime?

  @@index([status])
  @@index([uploadedById])
  @@index([createdAt])
  @@index([humanReviewed])
}
